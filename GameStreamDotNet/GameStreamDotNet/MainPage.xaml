<Page
    x:Class="GameStreamDotNet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameStreamDotNet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="ipAddressTextBox" HorizontalAlignment="Left" Margin="532,330,0,0" TextWrapping="NoWrap" Text="127.0.0.1" VerticalAlignment="Top" Height="22" Width="372" AcceptsReturn="False"/>
        <Button x:Name="pairButton" Content="Pair" HorizontalAlignment="Left" Margin="946,330,0,0" VerticalAlignment="Top" Height="32" Width="131" RenderTransformOrigin="0.015,0.562" Click="PairButton_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="417,336,0,0" TextWrapping="Wrap" Text="IP Address:" VerticalAlignment="Top" Height="32" Width="110"/>
        <TextBox x:Name="outputTextBox" HorizontalAlignment="Left" Margin="417,398,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="484" Width="660" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Page>
